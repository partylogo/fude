{
  "version": 2,
  "builds": [
    {
      "src": "admin/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "admin/dist",
        "buildCommand": "cd admin && (pnpm i --frozen-lockfile || pnpm i) && pnpm build"
      }
    },
    { "src": "api/index.js", "use": "@vercel/node@latest" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/assets/(.*)", "dest": "/admin/dist/assets/$1" },
    { "src": "/(.*\\.(css|js|png|jpg|jpeg|svg|ico|txt|webmanifest))", "dest": "/admin/dist/$1" },
    { "src": "/(.*)", "dest": "/admin/dist/index.html" }
  ]
}